<Page x:Class="CEN207_Assessment_2.Pages.Chats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CEN207_Assessment_2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chats">

    <Grid>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,669,0" Width="131" HorizontalAlignment="Left" BorderBrush="#FF7C8088">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Frame Content="Frame" Margin="131,0,0,50"/>
        <Border BorderThickness="1" Margin="131,400,0,0" Background="#FFC17777" BorderBrush="White" Height="50" VerticalAlignment="Bottom">
            <DockPanel VerticalAlignment="Bottom" >
                <TextBox TextWrapping="Wrap" Text="TextBox" Width="536" Height="46"/>
                <Button Content="Send" Height="34" Width="85"/>
            </DockPanel>
        </Border>
        

    </Grid>
</Page>
